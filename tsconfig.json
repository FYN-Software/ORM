{
    "compilerOptions": {
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2020",
        "strict": true,
        "outDir": "dist",
        "sourceMap": false,
        "baseUrl": ".",
        "rootDir": "./src",
        "paths": {
            "@fyn-software/core/*": [ "../core/src/*" ]
        },
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments": true
    },
    "references": [
        { "path": "../core/tsconfig.json" }
    ],
    "include": [
        "src",
        "types",
        "../core/types"
    ],
    "exclude": [
        "**/node_modules"
    ]
}